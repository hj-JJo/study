<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
		http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
		id="WebApp_ID"   
		version="3.0">
		
  <display-name>InsaTestPage</display-name>


  <resource-ref>
  	<description>dbcp 정의</description>
  	<res-ref-name>jdbc/insaDBPool</res-ref-name>
  	<res-type>javax.sql.DataSource</res-type>
  	<res-auth>Container</res-auth>  
  </resource-ref>
  
  <!-- 업로드 -->
  <context-param> 
    <param-name>uploadDir</param-name>
    <param-value>upload</param-value>
  </context-param>
  
  <!-- 컨트롤러네이밍 -->
  <servlet>
  	<servlet-name>insaController</servlet-name>
  	<servlet-class>com.test.insapage.controller.MainController</servlet-class>
  </servlet>
  
  <!-- 컨트롤러 맵핑 -->
  <servlet-mapping>
  	<servlet-name>insaController</servlet-name>
  	<url-pattern>*.ic</url-pattern>
  </servlet-mapping>
  

</web-app>






